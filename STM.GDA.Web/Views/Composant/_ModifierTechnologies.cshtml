@using STM.GDA.Web.Models
@model List<EtiquetteModel>

<h3>Technologies</h3>
<div class="row">
    <div class="full-height col-sm-9 col-sm-push-3">
        @Html.ListBox("TechnologiesSelectionnees", new MultiSelectList((IEnumerable<SelectListItem>)ViewBag.ListeTechnologies, "Value", "Text", Model.Select(x => x.Id)), new { @class = "margin-bottom", style = "width: 100%;" })
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#TechnologiesSelectionnees').selectize({
            plugins: ['remove_button'],
            create: function (input) {
                return selectizeAdd(input, 'TechnologiesSelectionnees');
            },
            persist: false,
            placeholder: "Ajouter des technologies",
            render: {
                option_create: function (data, escape) {
                    return '<div class="create">Ajouter <strong>' + escape(data.input) + '</strong>&hellip;</div>';
                }
            }
        });
    });
</script>
