@using STM.GDA.Web.Models
@model List<ComposantListeModel>

@foreach (var composant in Model)
{
<div class="divComposant @(composant.DernierComposantAffiche ? "dernier-element" : "")" onclick="window.location.href = '@Url.Action("Details", "Composant", new { id =  @Html.ValueFor(x => composant.Id) })'">
    <div class="col-sm-10 bold padding-top">
        @Html.DisplayFor(x => composant.AbreviationNom)
    </div>

    <div class="col-sm-2 italic right-align padding-top version">
        @Html.LabelFor(x => composant.Version)
        @Html.DisplayFor(x => composant.Version)
    </div>

    <div class="col-xs-12 description italic">
        @Html.DisplayFor(x => composant.Description)
    </div>

    <div class="col-xs-12 italic tags">
        @foreach (var technologie in composant.Technologies)
        {
            <div class="tag">
                @Html.DisplayFor(x => technologie.Nom)
            </div>
        }

        @foreach (var dependance in composant.Dependances)
        {
            <div class="tag">
                @Html.DisplayFor(x => dependance.Nom)
            </div>
        }
    </div>

    <div class="overlay"></div>
</div>
}

