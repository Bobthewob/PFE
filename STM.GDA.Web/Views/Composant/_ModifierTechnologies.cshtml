@using STM.GDA.Web.Models
@model List<EtiquetteModel>

<h3>Technologies</h3>
@Html.ListBox("TechnologiesSelectionnes", new MultiSelectList((IEnumerable<SelectListItem>)ViewBag.ListeTechnologies, "Value", "Text", Model.Select(x => x.Id)), new { @class = "margin-bottom", style = "width: 100%;" })

<script>
    $(document).ready(function () {
        $('#TechnologiesSelectionnes').selectize({
            plugins: ['remove_button'],
            create: true,
            persist: false,
            placeholder: "Ajouter des technologies",
            render: {
                option_create: function (data, escape) {
                    return '<div class="create">Ajouter <strong>' + escape(data.input) + '</strong>&hellip;</div>';
                }
            }
        });
    });
</script>
